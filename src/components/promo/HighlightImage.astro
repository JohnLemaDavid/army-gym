---
interface Props {
  eyebrow?: string;
  title?: string;
  copy?: string;
  image?: string;
}

const {
  eyebrow = "CLASES GRUPALES",
  title = "Yoga, Rumba, Step, Core,Strong, Funcional, Tren Inferior",
  copy = "Entra con nuestros coachs certificados y disfruta tu progreso.",
  image = "/assets/imgs/Instalaciones-aerobicas.webp",
} = Astro.props;
---

<section class="relative overflow-hidden rounded-3xl border border-white/10">
  <div
    class="absolute inset-0 bg-cover bg-center"
    style={`background-image: url('${image}');`}
    aria-hidden="true"
  ></div>
  <div class="relative bg-linear-to-r from-black/85 via-black/70 to-black/40 px-5 py-8 flex flex-col gap-3">
    <p class="text-sm uppercase tracking-[0.22em] text-white/60">{eyebrow}</p>
    <h3 class="text-2xl font-semibold leading-snug">
      {title}
    </h3>
    <p class="text-sm text-white/80">
      {copy}
    </p>
  </div>
</section>
