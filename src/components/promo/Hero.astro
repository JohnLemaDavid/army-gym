---
interface Props {
  headline?: string;
  subtitle?: string;
  badge?: string;
  ctaLabel?: string;
  ctaHref?: string;
  disclaimer?: string;
  image?: string;
}

const {
  headline = "4 MESES\nPOR\nüî• $100 üî•",
  subtitle = "ACCESO TOTAL AL √ÅREA DE MUSCULACI√ìN, CLASES GRUPALES, ZONA DE CARDIO Y CROSFFIT",
  badge = "Army Fitness ",
  ctaLabel = "¬°Quiero inscribirme ahora!",
  ctaHref = "https://wa.me/593983306671?text=Quiero%20la%20promo%20de%204%20meses%20por%20100",
  disclaimer = "SOLO 50 CUPOS",
  image = "/assets/imgs/Instalaciones-Principales.webp",
} = Astro.props;
---

<section
  class="relative overflow-hidden rounded-3xl border border-white/10 bg-black shadow-2xl shadow-orange-900/20"
>
  <div
    class="absolute inset-0 bg-cover bg-center scale-105"
    style={`background-image: url('${image}');`}
    aria-hidden="true"
  ></div>
  <div
    class="
      absolute inset-0
      bg-linear-to-b from-black/70 via-black/55 to-black/85
    "
  ></div>

  <div class="relative px-5 pt-10 pb-12 flex flex-col gap-4 text-center">
    <p class="text-md uppercase tracking-[0.3em] text-white/70">
      {badge}
    </p>
    <h1 class="text-4xl font-bold leading-tight mb-30 whitespace-pre-line">
      {headline}
    </h1>
    <p class="text-base font-semibold text-white/80">
      {subtitle}
    </p>
    <div class="flex flex-col gap-3 items-center">
      <a
        class="
          inline-flex items-center justify-center
          w-full max-w-xs
          rounded-full
          bg-primary
          px-6 py-4
          text-lg font-semibold text-white
          shadow-lg shadow-orange-900/40
          active:translate-y-px
          transition-transform duration-150
        "
        href={ctaHref}
      >
        {ctaLabel}
      </a>
      <p class="text-xs text-white/70">{disclaimer}</p>
    </div>
  </div>
</section>
