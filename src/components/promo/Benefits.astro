---
interface Props {
  title?: string;
  label?: string;
  items?: string[];
}

const {
  title = "Lo que obtienes",
  label = "Incluido",
  items = [
    "Rutinas personalizadas según tu objetivo.",
    "Clases de alta intensidad y funcional sin costo extra.",
    "Zona de cardio equipada + área de pesos libres.",
    "Acceso 5am - 10pm y lockers disponibles.",
  ],
} = Astro.props;
---

<section class="flex flex-col gap-5 rounded-3xl bg-gradient-to-b from-white/5 to-white/[0.02] border border-white/10 p-6">
  <div class="flex items-baseline justify-between">
    <h2 class="text-xl font-semibold">{title}</h2>
    <span class="text-xs uppercase tracking-[0.25em] text-white/60">{label}</span>
  </div>
  <ul class="grid grid-cols-1 gap-4 text-sm">
    {items.map((item) => (
      <li class="flex items-start gap-3">
        <span class="mt-1 h-2 w-2 rounded-full bg-[var(--color-primary)]"></span>
        <p class="text-white/85">{item}</p>
      </li>
    ))}
  </ul>
</section>
